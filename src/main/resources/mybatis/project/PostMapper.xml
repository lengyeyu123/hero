<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.han.hero.project.mapper.PostMapper">
    <insert id="add">
        insert into h_post (postCode, postName, orderNum <if test="state != null">,state</if>, createBy, createTime)
        values (#{postCode}, #{postName}, #{orderNum} <if test="state != null">,#{state}</if>, #{createBy},
        getDate());
    </insert>
    <update id="update">
        update h_post
        <set>
            <if test="postCode != null and postCode != ''">
                postCode = #{postCode},
            </if>
            <if test="postName != null and postName != ''">
                postName = #{postName},
            </if>
            <if test="orderNum != null">
                orderNum = #{orderNum},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            updateBy = #{updateBy},
            updateTime = getDate()
        </set>
        where postId = #{postId}
    </update>
    <delete id="del">
        delete
        from h_post
        where postId = #{postId}
    </delete>


    <select id="list" resultType="com.han.hero.project.domain.Post">
        select *
        from h_post
        <where>
            <if test="postCode != null and postCode != ''">
                and postCode like CONCAT('%', #{postCode}, '%')
            </if>
            <if test="postName != null and postName != ''">
                and postName like CONCAT('%', #{postName}, '%')
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
        </where>
    </select>
</mapper>